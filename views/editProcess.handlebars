</select>

<label for="motivoParalisado">Motivo Paralisado:</label>
<input type="text" id="motivoParalisado" name="motivoParalisado" value="{{process.motivoParalisado}}">

<label for="dataParalisado">Data Paralisado:</label>
<input type="date" id="dataParalisado" name="dataParalisado" value="{{formatDateForInput process.dataParalisado}}">



<label for="esclarecimentosNaoIniciado">Esclarecimentos Não Iniciado:</label>
<select id="esclarecimentosNaoIniciado" name="esclarecimentosNaoIniciado">
    <option value="true" {{#if (eq process.esclarecimentosNaoIniciado true)}}selected{{/if}}>Sim</option>
    <option value="false" {{#if (eq process.esclarecimentosNaoIniciado false)}}selected{{/if}}>Não</option>
</select>

