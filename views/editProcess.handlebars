<input type="date" id="dataNaoIniciadoEsclarecimentos" name="dataNaoIniciadoEsclarecimentos" value="{{formatDateForInput process.dataNaoIniciadoEsclarecimentos}}">



<label for="esclarecimentosIniciado">Esclarecimentos Iniciado:</label>
<select id="esclarecimentosIniciado" name="esclarecimentosIniciado">
    <option value="true" {{#if (eq process.esclarecimentosIniciado true)}}selected{{/if}}>Sim</option>
